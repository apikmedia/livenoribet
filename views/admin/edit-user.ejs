<% layout('layout') -%>

<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-2xl font-bold mb-6">Edit User</h1>
  
  <div class="bg-dark-800 rounded-lg shadow-lg p-6">
    <form action="/admin/users/edit/<%= user.id %>" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-300 mb-2">Username</label>
        <input type="text" class="w-full px-3 py-2 bg-dark-700 border border-gray-600 rounded-lg text-gray-400" 
               value="<%= user.username %>" disabled>
      </div>
      
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
        <input type="email" class="w-full px-3 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:outline-none focus:border-primary text-white" 
               id="email" name="email" value="<%= user.email || '' %>">
      </div>
      
      <div class="mb-4">
        <label for="user_type" class="block text-sm font-medium text-gray-300 mb-2">User Type</label>
        <select class="w-full px-3 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:outline-none focus:border-primary text-white" 
                id="user_type" name="user_type">
          <option value="trial" <%= user.user_type === 'trial' ? 'selected' : '' %>>Trial</option>
          <option value="premium" <%= user.user_type === 'premium' ? 'selected' : '' %>>Premium</option>
        </select>
      </div>
      
      <div class="mb-4">
        <label for="subscription_expired_at" class="block text-sm font-medium text-gray-300 mb-2">Expiry Date</label>
        <input type="date" class="w-full px-3 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:outline-none focus:border-primary text-white" 
               id="subscription_expired_at" name="subscription_expired_at" 
               value="<%= user.subscription_expired_at ? new Date(user.subscription_expired_at).toISOString().split('T')[0] : '' %>" required>
      </div>
      
      <div class="mb-6">
        <label for="max_streams" class="block text-sm font-medium text-gray-300 mb-2">Max Streams</label>
        <input type="number" class="w-full px-3 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:outline-none focus:border-primary text-white" 
               id="max_streams" name="max_streams" value="<%= user.max_streams %>" min="1" required>
      </div>
      
      <div class="flex gap-3">
        <button type="submit" class="bg-primary hover:bg-secondary text-white px-6 py-2 rounded-lg transition-colors">
          Update User
        </button>
        <a href="/admin/users" class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-lg transition-colors">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div> 